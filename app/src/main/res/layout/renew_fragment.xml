<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:overScrollMode="never"
    tools:context="com.service.bus.activity.Depot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_userid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@string/id"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_id_renew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/edittextstyle"
                android:ellipsize="start"
                android:gravity="center"
                android:hint="@string/enter_user_id"
                android:inputType="text"
                android:maxLines="1"
                android:lines="1"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@string/source"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_source_renew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/edittextstyle"
                android:padding="@dimen/_8sdp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@string/destination"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_destination_renew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/edittextstyle"
                android:padding="@dimen/_8sdp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_period"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@string/peroid"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_period_renew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/edittextstyle"
                android:padding="@dimen/_8sdp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@string/distance"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_distance_renew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/edittextstyle"
                android:ellipsize="start"
                android:gravity="center"
                android:hint="@string/enter_distance"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:lines="1"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_depo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@string/depo_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_depo_renew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/edittextstyle"
                android:padding="@dimen/_8sdp"
                android:textAlignment="center" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_renew_pass"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/button"
            android:text="@string/renew_pass"
            android:textColor="@color/black" />
    </LinearLayout>
</ScrollView>

